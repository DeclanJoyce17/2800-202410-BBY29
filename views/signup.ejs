<%- include("templates/header") %>
	<link rel="stylesheet" type="text/css" href="/styles/change.css" text="">
	</head>

	<div class="title" class="center">
		<img src="/img/Logo.png" alt="logo" width="250" height="250">
	</div>

	<div class="login">
		<!-- Existing user/email pop-up message -->
		<% if (typeof errorMessage !=='undefined' && errorMessage) { %>
			<div class="alert alert-danger" role="alert">
				<h5>
					<%= errorMessage %>
				</h5>
			</div>
			<% } %>


				<form class="login" action="/signup" method="POST" class="index-form center">
					<% if (typeof errorMessage !=='undefined' && errorMessage) { %>
						<input type="text" name="username" placeholder="Username" class="border"
							value="<%= typeof username !== 'undefined' ? username : '' %>">
						<input type="email" name="email" placeholder="Email" class="border"
							value="<%= typeof email !== 'undefined' ? email : '' %>">
						<input type="password" name="password" placeholder="Password" class="border">
						<% } else { %>
							<input type="text" name="username" placeholder="Username">
							<input type="email" name="email" placeholder="Email">
							<input type="password" name="password" placeholder="Password">
							<% } %>
				</form>

				<div style="gap: 10%; width: 100%; display: flex; justify-content: center;">
					<!-- Go Back button -->
					<button type="button" class="index-btn top-left" style="margin-left: 10px; width: 35%;"
						onclick="location.href='/';">
						Cancel
					</button>
					<button type="submit" class="index-btn" style="width: 35%;">Sign Up</button>
				</div>
				<br>
	</div>

	<%- include("templates/easteregg") %>
		<%- include("templates/end") %>