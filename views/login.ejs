<%- include("templates/header") %>
	<link rel="stylesheet" type="text/css" href="/styles/change.css" text="">
	</head>

	<div class="title" class="center">
		<img src="/img/Logo.png" alt="logo" width="250" height="250">
	</div>


	<div class="login">
		<% if (input==1) { %>
			<div class="alert alert-danger" role="alert">
				<h5>Invalid Email or Password</h5>
			</div>
			<% } %>

				<form class="login" action="/login" method="POST" class="index-form center">
					<% if (input==1) { %>
						<input type="email" name="email" placeholder="Email" class="border">
						<input type="password" name="password" placeholder="Password" class="border">
						<% } else { %>
							<input type="email" name="email" placeholder="Email">
							<input type="password" name="password" placeholder="Password">
							<% } %>

							<button type="submit" class="index-btn">Login</button>
				</form>
				
				<br>
				<form class="index-form center">
					<a href="/reset-email" class="resize" style="color: #FF8624;">Forget password?</a>
				</form>
	</div>
