<%- include("templates/header") %>
	<link rel="stylesheet" type="text/css" href="/styles/style.css" text="">
</head>

<div class="title" class="center">
    <img src="/img/logo.png" alt="FitUp Logo" width="250" height="250">
</div>

<div class="reset-password">
    <!-- Display error message -->
    <% if (errorMessage) { %>
        <div class="alert alert-danger resize">
            <h5><%= errorMessage %></h5>
        </div>
    <% } %>
    <!-- Display success message -->
    <% if (successMessage) { %>
        <div class="alert alert-success resize"><h5><%= successMessage %></h5></div>
        <button type="button" onclick="location.href='/login'" class="index-btn" style="margin-left: 10px;">Login</button>
        <br><br><br>
 <% } else { %>
        <form class="login" action="/reset-email" method="POST" class="index-form center">
                <h1 for="email" class="resize h1-label">Enter your email:</h1>
                <input type="email" id="email" name="email" placeholder="Email" required>
                <div class="button-container centered-buttons">
                    <button type="submit" class="index-btn increased-width">Reset Password</button>
                    <button type="button" onclick="location.href='/'" class="index-btn increased-width">Cancel</button>
                </div>
            </form>
    <% } %>
</div>

<%- include("templates/end") %>

<style>
    .index-btn.increased-width {
        width: 200px; /* Adjust the width as per your design */
    }

    .center-form {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-top: 50px; /* Adjust the top margin as needed */
    }

    .button-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 10px; /* Adjust the space between buttons */
        margin-top: 20px; /* Adjust the top margin as needed */
    }

    input {
	border-radius: 20px;
	height: 50px;
}

input::placeholder {
	font-size: 20px; /* Adjust the font size as needed */
	color: grey; /* Optional: Change the color of the placeholder text */
	font-style: italic; /* Optional: Change the font style */
    padding-left: 20px;
    padding-bottom: 5px;
}
</style>
